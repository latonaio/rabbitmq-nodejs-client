{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"declaration": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictFunctionTypes": true
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"./src/**/*.d.ts",
		"./src/**/*.spec.ts"
	]
}